<% include ../partials/header %>
    
        <h1 style="text-align: center">Edit Comment</h1>
        <div style="width: 30%; margin: 25px auto; margin-top: 2rem;">
            <form action="/questions/<%= question_id %>/comments/<%=comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%=comment.text %>" name="comment[text]" placeholder="text" autocomplete="off">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/questions">Go Back</a>
        </div>
<% include ../partials/footer %>

